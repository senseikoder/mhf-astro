---
import PageLayout from "../layouts/PageLayout.astro";
import { Image } from "astro:assets";
import picContact from "../images/pic-contact.webp";
import ContactForm from "../components/ContactForm.astro";
---

<PageLayout title="Contacto" description="Lorem ipsum dolor sit amet">
   <section class="section">
      <div class="container has-text-white">
         <div class="columns is-centered">
            <div class="column is-5">
               <figure class="image">
                  <Image src={picContact} alt="Contacto" />
               </figure>
            </div>

            <div class="column is-5 is-offset-1 py-6">

               <ContactForm />
               
            
            </div>
         </div>

         <h3 class="subtitle is-4 has-text-primary-60 has-text-centered mt-6">
            #myhealthfair #feriavirtual #recursosdesalud #Massachusetts
            #comunidadlatina
         </h3>
      </div>
   </section>
</PageLayout>
<style>
   .banner {
      background: url("../images/banner-about.webp") center / cover no-repeat;
      position: relative;
   }

   .is-overlay {
      background-color: #0577b5d1;
   }
</style>
