---
import ModalBooths from "../../../components/ModalBooths.astro";
import ModalVideo from "../../../components/ModalVideo.astro";
import BoothLayout from "../../../layouts/BoothLayout.astro";
const booth = {
   image: "helpline.webp",
   btn1: "brochure.webp",
   btn2: "faq.webp",
   btn3: "resources.webp",
   btn4: "contact.webp",
   btn5: null,
};
---

<BoothLayout
   title="Mass Health Help Line"
   description="Lorem ipsum dolor sit amet"
>
   <section class="section banner-booth">
      <div class="is-overlay"></div>
      <div class="container has-text-white">
         <div class="columns is-centered">
            <div class="column is-6 has-text-centered">
               <svg
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  viewBox="0 0 600 780"
               >
                  <image
                     width="600"
                     height="780"
                     xlink:href={"/img/booths-bg/" + booth.image}
                  />

                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger"
                     data-target="modal-video"
                  >
                     <rect
                        x="120"
                        y="49"
                        fill="#fff"
                        opacity="0"
                        width="413"
                        height="266"></rect>
                  </a>
                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger"
                     data-target="modal-booth"
                     data-content="brochure"
                  >
                     <image
                        x="90"
                        y="575"
                        xlink:href={"/img/booths-pics/" + booth.btn1}
                     />
                  </a>
                  <a
                     xlink:href="https://www.masshelpline.com/faq/"
                     target="_blank"
                  >
                     <image
                        x="310"
                        y="575"
                        xlink:href={"/img/booths-pics/" + booth.btn2}
                     />
                  </a>
                  <a
                     xlink:href="https://www.masshelpline.com/resources/"
                     target="_blank"
                  >
                     <image
                        x="90"
                        y="660"
                        xlink:href={"/img/booths-pics/" + booth.btn3}
                     />
                  </a>
                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger"
                     data-target="modal-booth"
                     data-content="contacto"
                  >
                     <image
                        x="310"
                        y="660"
                        xlink:href={"/img/booths-pics/" + booth.btn4}
                     />
                  </a>

                  <!-- <a xlink:href="#contacto">
                     <rect
                        x="205"
                        y="716"
                        fill="#fff"
                        opacity="0"
                        width="164"
                        height="54"></rect>
                  </a> -->
               </svg>
            </div>
         </div>
      </div>

      <div class="has-text-centered mt-5">
         <a href="/" class="button is-light is-rounded is-outlined"
            >Go back to Fair</a
         >
      </div>
   </section>

   <ModalBooths />

   <ModalVideo videoID="https://youtu.be/crnXORdWaMk" />

   <div id="brochure" class="is-hidden">
      <p>
         The Massachusetts Behavioral Health Help Line (BHHL) is here to connect
         you directly to clinical help, when and where you need it. Even if
         you're not sure what kind of help or treatment you may need, we can
         help guide you.
      </p>

      <p>Common Reasons for Seeking Help Include:</p>

      <ul>
         <li>Having trouble sleeping or sleeping all the time</li>
         <li>Feeling anxious or worried more often than usual</li>
         <li>Alcohol or drug use</li>
         <li>Feeling trapped or hopeless</li>
         <li>Acting recklessly or engaging in unsafe activities</li>
         <li>Feeling very angry or looking for revenge</li>
         <li>
            Talking or thinking about harming or killing yourself or others
         </li>
      </ul>
   </div>

   <div id="contacto" class="is-hidden">
      <p>It's free, confidential, and no health insurance is required.</p>
      <p>Real-time interpretation in 200+ languages.</p>

      <p>
         Deaf or hard of hearing? Contact MassRelay at 711, or use your video
         relay or caption provider of choice.
      </p>

      <p>
         The Behavioral Health Help Line is a service of the Commonwealth of
         Massachusetts, operated by the Massachusetts Behavioral Health
         Partnership (MBHP).
      </p>
      <p>Call or text 833-773-2445 (BHHL)</p>
   </div>
</BoothLayout>
