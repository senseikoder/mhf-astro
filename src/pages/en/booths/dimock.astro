---
import ModalBooths from "../../../components/ModalBooths.astro";
import ModalVideo from "../../../components/ModalVideo.astro";
import ModalForm from "../../../components/ModalForm.astro";
import BoothLayout from "../../../layouts/BoothLayout.astro";
const booth = {
   image: "dimock-center.webp",
   btn1: "brochure.webp",
   btn2: "jobs.webp",
   btn3: "giveaway.webp",
   btn4: "contact.webp",
   btn5: null,
};
const wpuploads = import.meta.env.WP_UPLOADS;
---

<BoothLayout title="The Dimock Center" description="Lorem ipsum dolor sit amet">
   <section class="section banner-booth dimock">
      <div class="is-overlay"></div>
      <div class="container has-text-white">
         <div class="columns is-centered">
            <div class="column is-6 has-text-centered">
               <svg
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  viewBox="0 0 600 780"
               >
                  <image
                     width="600"
                     height="780"
                     xlink:href={"/img/booths-bg/" + booth.image}
                  />

                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger video"
                     data-target="modal-video"
                  >
                     <rect
                        x="120"
                        y="49"
                        fill="#fff"
                        opacity="0"
                        width="413"
                        height="266"></rect>
                  </a>

                  <!-- Brochure -->
                  <a
                     xlink:href={wpuploads+"/2021/07/Dimock-Brochure-PDF.pdf"}
                     target="_blank"
                     class="brochure"
                  >
                     <image
                        x="90"
                        y="575"
                        xlink:href={"/img/booths-pics/" + booth.btn1}
                     />
                  </a>

                  <!-- Empleos -->
                  <a
                     xlink:href="https://dimock.org/careers/jobs/"
                     target="_blank"
                     class="jobs"
                  >
                     <image
                        x="310"
                        y="575"
                        xlink:href={"/img/booths-pics/" + booth.btn2}
                     />
                  </a>

                  <!-- Obsequio -->
                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger giveaway"
                     data-target="modal-booth"
                     data-content="obsequio"
                  >
                     <image
                        x="90"
                        y="660"
                        xlink:href={"/img/booths-pics/" + booth.btn3}
                     />
                  </a>

                  <!-- Contacto -->
                  <a
                     xlink:href="javascript:void(0)"
                     class="modal-trigger contact"
                     data-target="modal-form"
     
                  >
                     <image
                        x="310"
                        y="660"
                        xlink:href={"/img/booths-pics/" + booth.btn4}
                     />
                  </a>

                  <!-- <a xlink:href="#contacto">
                     <rect
                        x="205"
                        y="716"
                        fill="#fff"
                        opacity="0"
                        width="164"
                        height="54"></rect>
                  </a> -->
               </svg>
            </div>
         </div>
      </div>

      <div class="has-text-centered mt-5">
         <a href="/en" class="button is-light is-rounded is-outlined"
            >Go back to Fair</a
         >
      </div>
   </section>

   <ModalBooths />

   <ModalVideo videoID="https://youtu.be/QwyOSGMkGvA" />

   <ModalForm
      to="swaldro1@dimock.org"
      subject="Booth Dimock Center - New Contact Us Request"
   />

   <div id="obsequio" class="is-hidden">
      <p>
         Sorry, we don't have a giveaway at this time! But come back in the
         future for surprises!
      </p>
   </div>

</BoothLayout>
