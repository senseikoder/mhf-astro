---
export const prerender = false;
import BlogPost from "../layouts/BlogPost.astro";

const { slug } = Astro.params;

let res = await fetch(
	`https://myhealthfair.com/wp-json/wp/v2/posts?slug=${slug}`,
);
let [post] = await res.json();

