---
import ModalBooths from "../../components/ModalBooths.astro";
import ModalForm from "../../components/ModalForm.astro";
import ModalVideo from "../../components/ModalVideo.astro";
import BoothLayout from "../../layouts/BoothLayout.astro";
const booth = {
  image: "joslin.webp",
  btn1: "brochure.webp",
  btn2: "empleos.webp",
  btn3: "eventos.webp",
  btn4: "contacto.webp",
  btn5: null,
};
const wpuploads = import.meta.env.WP_UPLOADS;
---

<BoothLayout title="Joslin Diabetes Center" description="">
  <section class="section banner-booth joslin">
    <div class="is-overlay"></div>
    <div class="container has-text-white">
      <div class="columns is-centered">
        <div class="column is-6 has-text-centered">
          <svg
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 0 600 780"
          >
            <image
              width="600"
              height="780"
              xlink:href={"/img/booths-bg/" + booth.image}
            />

            <a
              xlink:href="javascript:void(0)"
              class="modal-trigger video"
              data-target="modal-video"
            >
              <rect
                x="120"
                y="49"
                fill="#fff"
                opacity="0"
                width="413"
                height="266"></rect>
            </a>

            <!-- Brochure -->
            <a
              xlink:href="/docs-booths/Reducing_Complications_Spanish.pdf"
              target="_blank"
              class="brochure"
            >
              <image
                x="75"
                y="575"
                xlink:href={"/img/booths-pics/" + booth.btn1}
              />
            </a>

            <!-- Empleos -->
            <a
              xlink:href="https://joslin-org.translate.goog/careers?_x_tr_sl=en&_x_tr_tl=es&_x_tr_hl=es&_x_tr_pto=sc"
              target="_blank"
              class="empleos"
            >
              <image
                x="295"
                y="575"
                xlink:href={"/img/booths-pics/" + booth.btn2}
              />
            </a>

            <!-- Eventos -->
            <a
              xlink:href="https://joslin-org.translate.goog/classes-events?_x_tr_hl=es-419&_x_tr_pto=sc&_x_tr_sl=en&_x_tr_tl=es&listPage=1&_x_tr_hist=true"
              target="_blank"
              class="eventos"
            >
              <image
                x="75"
                y="660"
                xlink:href={"/img/booths-pics/" + booth.btn3}
              />
            </a>

            <!-- Contacto -->
            <a
              xlink:href="javascript:void(0)"
              class="modal-trigger contacto"
              data-target="modal-booth"
              data-content="contacto"
            >
              <image
                x="295"
                y="660"
                xlink:href={"/img/booths-pics/" + booth.btn4}
              />
            </a>

            <!-- <a xlink:href="#contacto">
                     <rect
                        x="205"
                        y="716"
                        fill="#fff"
                        opacity="0"
                        width="164"
                        height="54"></rect>
                  </a> -->
          </svg>
        </div>
      </div>
    </div>

    <div class="has-text-centered mt-5">
      <a href="/" class="button is-light is-rounded is-outlined"
        >Volver a la Feria</a
      >
    </div>
  </section>

  <ModalBooths />

  <ModalVideo videoID="_tv5bDuyDzo" />

  <div id="contacto" class="is-hidden">
    <p><big>Gracias por su interés en el Joslin Diabetes Center. </big></p>
    <p>Para programar una cita, por favor llamar:</p>
    <p>
      Clínica para Adultos: <a href="tel:1-617-309-2440">617-309-2440</a>
      <br />
      Clínica Pediátrica: <a href="tel:1-617-732-2603">617-732-2603</a> <br />
      Oftalmología: <a href="tel:1-617-309-2552">617-309-2552</a>
    </p>
  </div>
</BoothLayout>
