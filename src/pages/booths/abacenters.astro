---
import ModalBooths from "../../components/ModalBooths.astro";
import ModalForm from "../../components/ModalForm.astro";
import ModalVideo from "../../components/ModalVideo.astro";
import BoothLayout from "../../layouts/BoothLayout.astro";
const booth = {
  image: "abacenters.webp",
  btn1: "brochure.webp",
  btn2: "preguntas.webp",
  btn3: "empleos.webp",
  btn4: "eventos.webp",
  btn5: "contacto.webp",
};
---

<BoothLayout
  title="ABA Centers of America"
  description="ABA Centers of America ofrece servicios de terapia ABA para personas con trastorno del espectro autista. Podemos ayudar a nuestros clientes en el hogar, la clÃ­nica, la escuela, la comunidad o en cualquier entorno."
>
  <section class="section banner-booth abacenters">
    <div class="is-overlay"></div>
    <div class="container has-text-white">
      <div class="columns is-centered">
        <div class="column is-6 has-text-centered">
          <svg
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 0 600 780"
          >
            <image
              width="600"
              height="780"
              xlink:href={"/img/booths-bg/" + booth.image}
            />

            <a
              href="javascript:void(0)"
              class="modal-trigger video"
              data-target="modal-video"
            >
              <rect
                x="134"
                y="52"
                fill="#fff"
                opacity="0"
                width="395"
                height="255"></rect>
            </a>

            <!-- Brochure -->
            <a
              href="/docs-booths/ABA-Therapy-Brochure.pdf"
              target="_blank"
              class="brochure"
            >
              <image
                x="100"
                y="530"
                xlink:href={"/img/booths-pics/" + booth.btn1}
              />
            </a>

            <!-- Preguntas -->
            <a
              href="https://www-abacenters-com.translate.goog/aba-faq/?_x_tr_sl=auto&_x_tr_tl=es&_x_tr_hl=es&_x_tr_pto=wapp"
              target="_blank"
              class="preguntas"
            >
              <image
                x="315"
                y="530"
                xlink:href={"/img/booths-pics/" + booth.btn2}
              />
            </a>

            <!-- Empleos -->
            <a
              href="https://www-abacenters-com.translate.goog/careers-in-aba/?_x_tr_sl=auto&_x_tr_tl=es&_x_tr_hl=es&_x_tr_pto=wapp"
              target="_blank"
              class="empleos"
            >
              <image
                x="100"
                y="610"
                xlink:href={"/img/booths-pics/" + booth.btn3}
              />
            </a>

            <!-- Eventos -->
            <a
              href="https://www-abacenters-com.translate.goog/events/?_x_tr_sl=auto&_x_tr_tl=es&_x_tr_hl=es&_x_tr_pto=wapp#appointment"
              target="_blank"
              class="eventos"
            >
              <image
                x="315"
                y="610"
                xlink:href={"/img/booths-pics/" + booth.btn4}
              />
            </a>

            <!-- Contacto -->

            <a
              href="javascript:void(0)"
              class="modal-trigger contacto"
              data-target="modal-booth"
              data-content="contacto"
            >
              <image
                x="205"
                y="690"
                xlink:href={"/img/booths-pics/" + booth.btn5}
              />
            </a>
          </svg>
        </div>
      </div>
    </div>

    <div class="has-text-centered mt-5">
      <a href="/" class="button is-light is-rounded is-outlined is-large"
        >Volver a la Feria</a
      >
    </div>
  </section>

  <ModalBooths />

  <ModalVideo videoID="OJ1fTY6PmTU" />

  <div id="contacto" class="is-hidden content">
    <h3>Ayudando a las familias a crear su futuro</h3>

    <div class="block is-size-5">
      <p>Llame ahora para una consulta gratuita y confidencial</p>
      <p><a href="tel:8449234222">(844) 923-4222</a></p>
      <p><a href="tel:8449094222">(844) 909-4222</a></p>
      <p><a href="tel:8449624222">(844) 962-4222</a></p>
    </div>
  </div>
</BoothLayout>
