---
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const idioma = Astro.currentLocale;
const { title, description, image } = Astro.props;

const heroImage = image.url;

import "@fontsource-variable/dm-sans";
---

<html lang={idioma} data-theme="light">
   <head>
      <BaseHead title={title} description={description} />
      <ViewTransitions />
   </head>

   <body>
      <Header />

      <div class="section">
         <div class="container">
            <div class="columns">
               <div class="column is-8 article">
                  <article>
                     <div class="hero-image mb-4">
                        {
                           heroImage && (
                              <img
                                 width={1020}
                                 height={510}
                                 src={heroImage}
                                 alt=""
                              />
                           )
                        }
                     </div>
                     <div class="content">
                        <!-- <div class="date">
									<FormattedDate date={new Date(date)} />
								</div> -->
                        <h1 class="title">{title}</h1>
                        <hr />
                        <slot />
                     </div>
                  </article>
               </div>
               <div class="column is-4">
                  <aside>
                     <div class="title is-5">Últimas Entradas</div>
                     <div class="title is-5">Categorías</div>
                  </aside>
               </div>
            </div>
         </div>
      </div>
      <main></main>
      <Footer />
      <style>
         .article {
            box-shadow:
               0 1px 3px -2px rgba(0, 0, 0, 0.12),
               0 1px 2px rgba(0, 0, 0, 0.24);
         }
      </style>
   </body>
</html>
