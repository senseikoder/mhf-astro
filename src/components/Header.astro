---
import Menu from "./NavbarPages.astro";
import { Image } from "astro:assets";
import logo from "../images/logo-MHF-short.webp";
import emb_header from "../images/emb-header.webp";
---

<section class="section p-2 has-background-primary is-hidden-touch">
	<div class="container is-max-widescreen">
		<div class="columns">
			<div class="column">
				<div class="social-links is-size-5">
					<a href="https://www.facebook.com/MyHealthFair" target="_blank">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="1em"
							height="1em"
							viewBox="0 0 20 20"
							><path
								fill="#fff"
								d="M10 .4C4.698.4.4 4.698.4 10s4.298 9.6 9.6 9.6s9.6-4.298 9.6-9.6S15.302.4 10 .4m2.274 6.634h-1.443c-.171 0-.361.225-.361.524V8.6h1.805l-.273 1.486H10.47v4.461H8.767v-4.461H7.222V8.6h1.545v-.874c0-1.254.87-2.273 2.064-2.273h1.443z"
							></path></svg
						>
					</a>
					<a
						href="https://www.linkedin.com/company/my-health-fair/"
						target="_blank"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="1em"
							height="1em"
							viewBox="0 0 20 20"
							><path
								fill="#fff"
								d="M10 .4C4.698.4.4 4.698.4 10s4.298 9.6 9.6 9.6s9.6-4.298 9.6-9.6S15.302.4 10 .4M7.65 13.979H5.706V7.723H7.65zm-.984-7.024c-.614 0-1.011-.435-1.011-.973c0-.549.409-.971 1.036-.971s1.011.422 1.023.971c0 .538-.396.973-1.048.973m8.084 7.024h-1.944v-3.467c0-.807-.282-1.355-.985-1.355c-.537 0-.856.371-.997.728c-.052.127-.065.307-.065.486v3.607H8.814v-4.26c0-.781-.025-1.434-.051-1.996h1.689l.089.869h.039c.256-.408.883-1.01 1.932-1.01c1.279 0 2.238.857 2.238 2.699z"
							></path></svg
						>
					</a>
					<a
						href="https://youtube.com/channel/UCNkGAfwzTiXgja3RCqELKyw"
						target="_blank"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="1em"
							height="1em"
							viewBox="0 0 20 20"
							><path
								fill="#fff"
								d="M11.603 9.833L9.357 8.785C9.161 8.694 9 8.796 9 9.013v1.974c0 .217.161.319.357.228l2.245-1.048c.197-.092.197-.242.001-.334M10 .4C4.698.4.4 4.698.4 10s4.298 9.6 9.6 9.6s9.6-4.298 9.6-9.6S15.302.4 10 .4m0 13.5c-4.914 0-5-.443-5-3.9s.086-3.9 5-3.9s5 .443 5 3.9s-.086 3.9-5 3.9"
							></path></svg
						>
					</a>
				</div>
			</div>
			<div class="column has-text-right">
				<img src="/img/flag-en.png" alt="" />

				<span class="is-size-7">English</span>
			</div>
		</div>
	</div>
</section>

<section class="section p-2 header-main">
	<div class="container is-max-widescreen">
		<div class="columns mb-0">
			<div class="column is-3 header-logo">
				<figure class="image logo">
					<a href="/">
						<Image src={logo} alt="logo MHF" />
					</a>
				</figure>
			</div>
			<div class="column has-text-right header-ad">
				<Image src={emb_header} alt="El Mundo Boston" />
			</div>
		</div>

		<div class="columns is-bordered">
			<div class="column p-1">
				<Menu />
			</div>
		</div>
	</div>
</section>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	.is-bordered {
		border-top: 1px groove lightgrey;
		/* box-shadow: 0px 3px 4px #e2e2e2; */
	}

	.social-links,
	.social-links a {
		display: flex;
		color: white;
	}
	@media (max-width: 728px) {
		.header-main .columns {
			display: flex;
			flex-direction: column;
		}

		.header-ad {
			order: 1;
			background-color: var(--primary);
		}

		.header-logo {
			display: none;
		}
	}
</style>
