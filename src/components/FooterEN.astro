<style>
  .list {
    list-style: none;
  }

  .list li {
    padding: 0.75rem;
    border-bottom: 1px solid whitesmoke;
  }

  .list a {
    color: white;
  }

  .chatbot {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    background-color: #fff;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
  }

  .chatbot:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
  }
</style>
