<ul class="ml-4">
   {
      posts.map((post: any) => (
         <li class="mb-4">
            <a href={`/blog/${post.slug}`}>
               <span class="has-text-info-40">{post.title.rendered}</span>
            </a>
         </li>
      ))
   }
</ul>

