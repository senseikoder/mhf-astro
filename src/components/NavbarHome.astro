---
import { Image } from "astro:assets";
import logoMHF from "../images/logo-MHF-short.webp";
import SubmenuFeria from "./SubmenuFeria.astro";
import SubmenuFair from "./SubmenuFair.astro";
const { pathname } = Astro.url;
const idioma = Astro.currentLocale;
let isHome = false;
if (pathname == "/" || pathname == "/en" || pathname == "/en/") isHome = true;
---

<header class:list={["navbar", { "is-fixed-top": isHome }]}>
   <div class="container">
      <div class="navbar-brand">
         <a class="navbar-item logo">
            <Image src={logoMHF} alt="Logo" width="286" height="70" />
         </a>
         <span class="navbar-burger" data-target="navbarMenu">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
         </span>
      </div>
      <div id="navbarMenu" class="navbar-menu">
         <div class="navbar-end">
            {
               idioma == "es" ? (
                  <>
                     <a
                        href="/"
                        class:list={["navbar-item", { "is-active": isHome }]}
                     >
                        Inicio
                     </a>

                     <SubmenuFeria />

                     <a href="/acerca-de" class="navbar-item">
                        Acerca de
                     </a>

                     <a href="/blog" class="navbar-item">
                        Vblog
                     </a>
                     <a href="/eventos" class="navbar-item">
                        Eventos
                     </a>
                     <a href="/toolkit" class="navbar-item">
                        Toolkit
                     </a>
                     <a href="/contacto" class="navbar-item">
                        Contacto
                     </a>
                     <a href="/en" class="navbar-item is-hidden-desktop">
                        English
                        <img
                           src="data:image/png;base64,"
                           alt=""
                           width="16"
                           height="11"
                           style="width: 16px; height: 11px;"
                        />
                     </a>
                  </>
               ) : (
                  <>
                     <a
                        href="/en"
                        class:list={["navbar-item", { "is-active": isHome }]}
                     >
                        Home
                     </a>

                     <SubmenuFair />
                     
                     <a href="/en/about" class="navbar-item">
                        About us
                     </a>


                     <a href="/en/blog" class="navbar-item">
                        Vblog
                     </a>
                     <a href="/en/events" class="navbar-item">
                        Events
                     </a>
                     <a href="/en/toolkit" class="navbar-item">
                        Toolkit
                     </a>
                     <a href="/en/contact" class="navbar-item">
                        Contact
                     </a>
                     <a href="/" class="navbar-item is-hidden-desktop">
                        Espa√±ol
                        <img
                           src="data:image/png;base64,"
                           alt=""
                           width="16"
                           height="11"
                           style="width: 16px; height: 11px;"
                        />
                     </a>
                  </>
               )
            }
         </div>
      </div>
   </div>
</header>

<style>
   .navbar {
      background-color: rgba(255, 255, 255, 0.75);
   }

   .is-white {
      background-color: rgba(255, 255, 255, 0.95);
   }
</style>
