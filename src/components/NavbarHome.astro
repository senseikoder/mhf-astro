---
import { Image } from "astro:assets";
import logoMHF from "../images/logo-MHF-short.webp";
const { pathname } = Astro.url;
const idioma = Astro.currentLocale;
let isHome = false;
if (pathname == "/" || pathname == "/en" || pathname == "/en/") isHome = true;
---

<header class:list={["navbar", { "is-fixed-top": isHome }]}>
   <div class="container">
      <div class="navbar-brand">
         <a class="navbar-item logo">
            <Image src={logoMHF} alt="Logo" width="286" height="70" />
         </a>
         <span class="navbar-burger" data-target="navbarMenu">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
         </span>
      </div>
      <div id="navbarMenu" class="navbar-menu">
         <div class="navbar-end">
            {
               idioma == "es" ? (
                  <>
                     <a
                        href="/"
                        class:list={["navbar-item", { "is-active": isHome }]}
                     >
                        Inicio
                     </a>
                     <a href="/acerca-de" class="navbar-item">
                        Acerca de
                     </a>
                     <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">Feria Virtual</a>

                        <div class="navbar-dropdown">
                           <a href="/booths/all-of-us/" class="navbar-item">
                              All of Us Research Program
                           </a>
                           <a
                              href="/booths/alzheimer-assoc/"
                              class="navbar-item"
                           >
                              Alzheimer's Association
                           </a>
                           <a href="/booths/dana-farber/" class="navbar-item">
                              Dana-Farber Cancer Institute
                           </a>
                           <a href="/booths/mass-health/" class="navbar-item">
                              Mass Health Redetermination
                           </a>
                           <a href="/booths/helpline-mass" class="navbar-item">
                              Mass Help Line
                           </a>
                           <a href="/booths/madrc/" class="navbar-item">
                              Massachusetts Alzheimer's Disease Reasearch Center
                           </a>
                           <a href="/booths/project-bread/" class="navbar-item">
                              Project Bread
                           </a>
                           <a href="/booths/dimock/" class="navbar-item">
                              The Dimock Center
                           </a>
                           <a
                              href="/booths/united-health-care/"
                              class="navbar-item"
                           >
                              United Health Care
                           </a>
                           <a href="/booths/whittier/" class="navbar-item">
                              Whittier Street Health Center
                           </a>
                        </div>
                     </div>
                     <a href="/blog" class="navbar-item">
                        Vblog
                     </a>
                     <a href="/events" class="navbar-item">
                        Eventos
                     </a>
                     <a href="/toolkit" class="navbar-item">
                        Toolkit
                     </a>
                     <a href="/contacto" class="navbar-item">
                        Contacto
                     </a>
                  </>
               ) : (
                  <>
                     <a
                        href="/en"
                        class:list={["navbar-item", { "is-active": isHome }]}
                     >
                        Home
                     </a>
                     <a href="/en/about" class="navbar-item">
                        About us
                     </a>
                     <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">Virtual Fair</a>

                        <div class="navbar-dropdown">
                           <a href="/en/booths/all-of-us/" class="navbar-item">
                              All of Us Research Program
                           </a>
                           <a
                              href="/en/booths/alzheimer-assoc/"
                              class="navbar-item"
                           >
                              Alzheimer's Association
                           </a>
                           <a href="/en/booths/dana-farber/" class="navbar-item">
                              Dana-Farber Cancer Institute
                           </a>
                           <a href="/en/booths/mass-health/" class="navbar-item">
                              Mass Health Redetermination
                           </a>
                           <a href="/en/booths/helpline-mass" class="navbar-item">
                              Mass Help Line
                           </a>
                           <a href="/en/booths/madrc/" class="navbar-item">
                              Massachusetts Alzheimer's Disease Reasearch Center
                           </a>
                           <a href="/en/booths/project-bread/" class="navbar-item">
                              Project Bread
                           </a>
                           <a href="/en/booths/dimock/" class="navbar-item">
                              The Dimock Center
                           </a>
                           <a
                              href="/en/booths/united-health-care/"
                              class="navbar-item"
                           >
                              United Health Care
                           </a>
                           <a href="/en/booths/whittier/" class="navbar-item">
                              Whittier Street Health Center
                           </a>
                        </div>
                     </div>
                     <a href="/en/blog" class="navbar-item">
                        Vblog
                     </a>
                     <a href="/en/events" class="navbar-item">
                        Events
                     </a>
                     <a href="/en/toolkit" class="navbar-item">
                        Toolkit
                     </a>
                     <a href="/en/contact" class="navbar-item">
                        Contact
                     </a>
                  </>
               )
            }
         </div>
      </div>
   </div>
</header>

<style>
   .navbar {
      background-color: rgba(255, 255, 255, 0.75);
   }

   .is-white {
      background-color: rgba(255, 255, 255, 0.95);
   }
</style>
