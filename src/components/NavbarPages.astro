---
import { Image } from "astro:assets";
import HeaderLink from "./HeaderLink.astro";
import logoMHF from "../images/logo-MHF-short.webp";
import SubmenuFeria from "./SubmenuFeria.astro";
import SubmenuFair from "./SubmenuFair.astro";
import SubmenuBlogES from "./SubmenuBlogES.astro";
import SubmenuBlogEN from "./SubmenuBlogEN.astro";
const idioma = Astro.currentLocale;
const urlHome = idioma == "es" ? "/" : "/en";
---

<nav class="navbar">
  <div class="container">
    <div class="navbar-brand is-hidden-desktop">
      <a href={urlHome} class="navbar-item logo">
        <Image src={logoMHF} alt="Logo" width="286" height="70" />
      </a>
      <span class="navbar-burger" data-target="navbarMenu">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>

    <div id="navbarMenu" class="navbar-menu">
      <div class="navbar-end">
        {
          idioma == "es" ? (
            <>
              <HeaderLink href="/">Inicio</HeaderLink>
              <SubmenuFeria />
              <HeaderLink href="/about">Acerca de</HeaderLink>
              <SubmenuBlogES />
              <HeaderLink href="/events">Eventos</HeaderLink>
              <HeaderLink href="/videos">Videos</HeaderLink>
              <HeaderLink href="/contact">Contacto</HeaderLink>
              <HeaderLink href="/en" class="is-hidden-desktop">
                English
                <img
                  src="data:image/png;base64,"
                  alt=""
                  width="16"
                  height="11"
                  style="width: 16px; height: 11px;"
                />
              </HeaderLink>
            </>
          ) : (
            <>
              <HeaderLink href="/en">Home</HeaderLink>
              <SubmenuFair />
              <HeaderLink href="/en/about">About us</HeaderLink>
              <SubmenuBlogEN />
              <HeaderLink href="/en/events">Events</HeaderLink>
              <HeaderLink href="/en/videos">Videos</HeaderLink>
              <HeaderLink href="/en/contact">Contact</HeaderLink>
              <HeaderLink href="/" class="is-hidden-desktop">
                Espa√±ol
                <img
                  src="data:image/png;base64,"
                  alt=""
                  width="16"
                  height="11"
                  style="width: 16px; height: 11px;"
                />
              </HeaderLink>
            </>
          )
        }
      </div>
    </div>
  </div>
</nav>

<style>
  :root {
    --bulma-navbar-height: 2.5rem;
  }

  nav a {
    border-bottom: 2px solid transparent;
    text-decoration: none;
    letter-spacing: 0.5pt;
  }

  .navbar-end {
    margin-inline-end: auto;
  }

  @media (min-width: 728px) {
    nav a.is-active {
      color: var(--bulma-primary);
      text-decoration: none;
      border-bottom-color: var(--accent);
      background-color: transparent;
    }
  }
</style>
